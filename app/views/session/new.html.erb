


      <div class="login-wrapper">
      <h2 class="main-heading">Log in</h2>
        <img src="assets/geo-hippo-head.gif" alt="">
        <% if flash[:error].present? %>
          <p><%= flash[:error] %></p>
        <% end %>
        <%= form_tag login_path, :class=> "form-inline" do%>
          <div class="form-group">
            <%= email_field_tag :email, nil, :class => "form-control", :placeholder => "Email" %>
          </div>

          <div class="form-group">
            <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password"  %>
          </div>
          <%= submit_tag 'Log in', :class => 'btn btn-primary'%>
        <% end %>
        </div>
