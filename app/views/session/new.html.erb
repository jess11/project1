<div class="row">
  <div class="col-xs-1 col-sm-3">
  </div>
  <div class="col-xs-10 col-sm-6 login-wrapper">

      <img src="assets/geo-hippo-head.gif" alt=""  class="hippo-head">
      <h2 class="main-heading">Log in</h2>

      <% if flash[:error].present? %>
        <p><%= flash[:error] %></p>
      <% end %>
      <%= form_tag login_path do%>
        <div class="form-group">
          <%= email_field_tag :email, nil, :class => "form-control", :placeholder => "Email" %>
        </div>

        <div class="form-group">
          <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password"  %>
        </div>

        <%= submit_tag 'Log in', :class => 'btn btn-primary btn100'%>
      <% end %>

  </div>
  <div class="col-xs-1 col-sm-3">
  </div>
</div>
