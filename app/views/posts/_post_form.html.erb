<% if @post.errors.any? %>
  <ol>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :tweet , :class => "sr-only"%>
    <%= f.text_area :tweet, placeholder: "What's new?", :required => true, :class => "form-control" %>
  </div>
  <%= f.submit "Tweet", :class => 'btn btn-primary'%>
<% end %>
