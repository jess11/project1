<% if @current_user.present? %>

  <% if @current_user.admin? %>
    <h1>Administration Page</h1>
    <h3>All Users</h3>
    <% @users.each do |user| %>
      <p><%= user.email %></p>
        <ul>
          <li>Name: <%= user.name  %></li>
          <li>Location: <%= user.location %></li>
        </ul>
    <% end %>
  <% end %>

  <div class="row">
    <% @users.each do |user| %>
    
          <%= link_to image_tag("#{user.image}", :class => "thumb"), url_for({ :controller => 'users', :action =>'show', :id=>user.id }) %>
          <p><%= user.name  %></p>

    <% end %>
  </div>
<% end %>
