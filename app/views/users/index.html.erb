<% if @current_user.present? %>

  <% if @current_user.admin? %>
    <h1>Administration Page</h1>
    <h3>All Users</h3>
    <% @users.each do |user| %>
      <p><%= user.email %></p>
        <ul>
          <li>Name: <%= user.name  %></li>
          <li>Location: <%= user.location %></li>
        </ul>
    <% end %>
  <% end %>

<h2>Suggested Friends</h2>
<%= render :partial => "users/users_gallery" %>

<% end %>
