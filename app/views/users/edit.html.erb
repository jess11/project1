<h1>Edit Profile</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, :required => true %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>
<% end %>
