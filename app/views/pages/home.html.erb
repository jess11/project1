
<!-- Modal start -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

    </div>
  </div>
</div>
<!-- Modal end -->

<% if @current_user.present? %>

  <div class="row">
    <div class="col-md-4">
      <%=  render :partial => 'users/user_info'%>
    </div>
    <div class="col-md-8">
      <%=  render :partial => 'posts/post_form' %>
      <%=  render :partial => 'posts/post' %>
    </div>
  </div>

<% else %>
  <div class="row">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-8 main">
      <h1>Twitter <small>Simplified</small></h1>
      <img id="hippo" src="/assets/geo-hippo.gif" alt="">
    </div>
    <div class="col-xs-2">
    </div>
  </div>
<% end %>


<script>
  $('#myModal').on('hidden.bs.modal', function () {
  $(this).removeData('bs.modal');
  })
</script>
